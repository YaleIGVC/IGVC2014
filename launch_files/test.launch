<launch>
    <node pkg="vectornav" type="vn200_node" name="vectornav_vn200" />
    <node pkg="vectornav" type="vn_sensor_msgs.py" name="vn_sensor_msgs" args="Imu:=imu_data" />
    <node pkg="segway_rmp" type="segway_rmp_node" name="segway_rmp_node" args="_serial_port:=/dev/ttyUSB1" />

    <node pkg="urg_node" type="urg_node" name="short_range_laser"/>

    <node pkg="tf" type="static_transform_publisher" name="baselink_laser_tf" args=".553 .114 .342 0 0 0 base_link laser 1000" />
    <node pkg="tf" type="static_transform_publisher" name="baselink_lla_tf" args="0 0 0 0 0 0 base_link LLA 1000" />
    <node pkg="tf" type="static_transform_publisher" name="basefoot_baselink_tf" args="0 0 0.25 0 0 0 base_footprint base_link 1000" />
    <!--<node pkg="tf" type="static_transform_publisher" name="laser_base_tf" args="0 0 0 0 0 0 base_link odom 1000" />-->


    <!--<node pkg="robot_pose_ekf" type="robot_pose_ekf" name="robot_pose_ekf">
        <remap from="odom" to="segway_rmp_node/odom"/>
        <param name="sensor_timeout" value="1.0" />
        <param name="odom_used" value="true" />
        <param name="imu_used" value="true" />
        <param name="freq" value="40" />
        <param name="output_frame" value="odom_combined" />
    </node>-->
    <node pkg="odom_combined" type="odom_combined.py" name="odom_combined"/>

    <node pkg="gmapping" type="slam_gmapping" name="mapping">
        <param name="odom_frame" value="odom_combined" />
    </node>

    <node pkg="teleop_twist_joystick" type="teleop_twist_joystick.py" name="teleop_twist_joystick"/>
    <node pkg="rviz" type="rviz" name="rviz"/>


</launch>
